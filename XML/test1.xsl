 <table border="1" class="w3-table w3-striped w3-bordered">
 <tr>
 <th class="w3-center">ID</th>
 <th class="w3-center"><xsl:value-of select="name(/document/clients_employee_covid_status/company/*[1])"/></th>
 <th class="w3-center"><xsl:value-of select="name(/document/clients_employee_covid_status/company/*[last()])"/></th>
 <th class="w3-center"><xsl:value-of select="name(/document/clients_employee_covid_status/*[position()=last()-2])"/>
 </th>
 <th class="w3-center"><xsl:value-of select="name(/document/clients_employee_covid_status/recovered)"/></th>
 <th class="w3-center"><xsl:value-of select="name(/document/clients_employee_covid_status/*[last()])"/></th>
 </tr>
<xsl:for-each select="document/clients_employee_covid_status">
<xsl:if test="contains(company/domain,'Data Analytics')">
 <tr style="color:white;background-color:red">
 <td class="w3-center"><xsl:value-of select="attribute::client_id"/>
 </td>
 <td class="w3-center"><xsl:value-of select="company/name/self::node()"/>
 </td>
 <td class="w3-center"><xsl:value-of select="descendant::company/child::domain"/>
 </td>
 <td class="w3-center"><xsl:value-of select="substring-after(confirmed,' ')"/>
 </td>
 <td class="w3-center"><xsl:value-of select="substring-after(recovered,' ')"/>
 </td>
 <td class="w3-center"><xsl:value-of select="number(substring(deaths,8))"/></td>
 </tr>
 </xsl:if>
 <xsl:if test="not(contains(company/domain,'Data Analytics'))">
 <tr>
 <td class="w3-center"><xsl:value-of select="attribute::client_id"/>
 </td>
 <td class="w3-center"><xsl:value-of select="company/name/self::node()"/>
 </td>
 <td class="w3-center"><xsl:value-of select="descendant::company/child::domain"/>
 </td>
 <td class="w3-center"><xsl:value-of select="substring-after(confirmed,' ')"/>
 </td>
 <td class="w3-center"><xsl:value-of select="substring(recovered,11)"/>
 </td>
 <td class="w3-center"><xsl:value-of select="substring(deaths,8)"/></td>
 </tr>
 </xsl:if>
 </xsl:for-each>
 <tr>
 <td colspan="7" class="w3-center">Total Confirmed Cases:<xsl:value-of select="sum(document/clients_employee_covid_status/conf)"/>
 </td>
 </tr>
 <tr>
 <td colspan="7" class="w3-center">Total Recovered Cases:<xsl:value-of select="sum(document/clients_employee_covid_status/recov)"/>
 </td>
 </tr>
 <tr>
 <td colspan="7" class="w3-center">Total Deaths:<xsl:value-of select="sum(document/clients_employee_covid_status/dea)"/>
 </td>
 </tr>
 <tr>
 <td colspan="4" class="w3-center">Companies with 50+ cases:<xsl:value-of select="count(document/clients_employee_covid_status[conf>=50])"/>
 </td>
 <td colspan="3" class="w3-center">Companies with 5+ deaths:<xsl:value-of select="count(/document/clients_employee_covid_status[dea>=5])"/>
 </td>
 </tr>
 </table>
 <label>
 <xsl:text>First Id:</xsl:text>
 <xsl:value-of select = "document/clients_employee_covid_status/@client_id"/></label>
 <br/>
 <label>
 <xsl:text>Last Id:</xsl:text>
 <xsl:value-of select = "document/clients_employee_covid_status[last()]/@client_id"/>
 </label>
 <br/>
 <label>
 <xsl:value-of select = "document/clients_employee_covid_status/preceding-sibling::comment()"/>
 </label>
